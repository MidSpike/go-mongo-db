{
    "extends": "@tsconfig/node16/tsconfig.json",
    "defaultSeverity": "error",
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "declaration": true,
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
